//concatination

public class Main
{
	public static void main(String[] args) {
	    String a="Hello";
	    String b="World";
		System.out.println(a+" "+b);
	}
}
--------------------------------------------------------------------------------

//length():


import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    String a="Hello";
	    String b="World";
	    int c=a.length();  //find length
		System.out.println(a+" "+b);  //concatination
		System.out.println(c);
	}
}

-----------------------------------------------------------------------------------

//charAt() method:


import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    String a="Hello";
	    String b="World";
	    int c=a.length();  //find length
	    char ch=a.charAt(0);
		System.out.println(a+" "+b);  //concatenation
		System.out.println(c);
		System.out.println(ch);//character at the particular index
	}
}

---------------------------------------------------------------------------------------


//Boolean method():

import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    String a="Hello";
	    String b="World";
	    int c=a.length();  //find length
	    char ch=a.charAt(0);
		System.out.println(a+" "+b);  //concatination
		System.out.println(c);
		System.out.println(ch);//charecter at the particular index
		System.out.print(a.equals(b)); //boolean method
	}
}


